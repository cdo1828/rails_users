<h1>Edit User</h1>

<% if flash["errors"] %>
	
		<% flash["errors"].each do |error_message| %> <br>
		<%= error_message %>
	<% end %>
	
<% end %>

<%= form_for(@user, url: user_path(@user), html:{method: "patch"}) do |f| %>
	<%= label_tag(:user_first_name, "First Name") %>
	<%= f.text_field :first_name %>
	<%= label_tag(:user_last_name, "Last Name") %>
	<%= f.text_field :last_name %>
	<%= label_tag(:user_email, "Last Name") %>
	<%= f.text_field :email %>
	<%= label_tag(:user_password, "Last Name") %>
	<%= f.text_field :password %>
	<%= f.submit %>
<% end %>